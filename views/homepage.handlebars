

{{#each surveys as |survey| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2 >
      <a id="SurveyRendered" href="/survey/{{survey.id}}">{{survey.name}}</a>
    </h2>
     <p id="homepagePara" class="createdUser">Created by {{survey.user.name}} on {{format_date survey.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p id="home2para" class="surveyDescription">
      {{survey.description}}
    </p>
  </div>
</div>
{{/each}}
