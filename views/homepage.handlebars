{{#each surveys as |survey| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2 >
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
     <!-- {{{get_emoji}}} -->
      <a id="SurveyRendered" href="/survey/{{survey.id}}">{{survey.name}}</a>
    </h2>
     <p>Created by {{survey.user.name}} on {{format_date survey.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{survey.description}}
    </p>
  </div>
</div>
{{/each}}
